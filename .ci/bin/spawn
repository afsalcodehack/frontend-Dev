#!/bin/bash

set -ex

project_name="$1"

if [ ! -f ionic-template/ionic.yaml ]; then
    echo "ionic-template/ionic.yaml not found"
    exit 1
fi

rm -rf "$project_name"
mkdir "$project_name"
cd "$project_name"

project_name=${project_name} initrepo=true \
    moban -cd ../ionic-template/ \
          -td ../ionic-template/templates \
          -c ionic.yaml \
          -t moban.yaml.jj2 \
          -o .moban.yaml

moban

cp ../ionic-template/cookiecutter-ionic.yaml ${project_name}-ionic.yaml

moban
