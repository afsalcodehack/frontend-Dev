#!/bin/sh

set -e -x

wwwroot="$1"
if [ "$1" ]; then
    wwwroot="$1"
else
    wwwroot=www
fi

if [ ! -d "$wwwroot" ]; then
    echo 'Directory "$wwwroot" not found.'
    exit 1
fi

if [ -d './node_modules/.bin' ]; then
    export PATH="$PATH:./node_modules/.bin"
fi

http-server "$wwwroot" -p 8100 &

sleep 10

exec protractor ./tests/e2e/protractor.conf.js
